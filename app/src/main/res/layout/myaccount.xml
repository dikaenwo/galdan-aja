<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Toolbar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:weightSum="3">

            <!-- Tombol Back -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="start"
                android:clickable="true"
                android:focusable="true"
                android:padding="5dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/arrow_kiri"
                    android:layout_marginEnd="3dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Back"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="15sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Judul Tengah -->
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="My Account"
                android:gravity="center"
                android:fontFamily="@font/poppins_bold"
                android:textSize="17sp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Tombol Edit -->
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Edit"
                android:textColor="#54A312"
                android:fontFamily="@font/poppins_bold"
                android:textSize="15sp" />
        </LinearLayout>


        <!--Isi-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp">

            <!-- Foto Profil -->
            <ImageView
                android:id="@+id/image_profile"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/profile"
                android:scaleType="centerCrop"
                android:padding="4dp"
                android:contentDescription="Foto profil" />

        </LinearLayout>

        <!-- Nama -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daniel Jones"
            android:gravity="center"
            android:fontFamily="@font/poppins_bold"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="daniel.jones@example.com"
            android:gravity="center"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            android:layout_marginTop="-5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+405 555-0128"
            android:gravity="center"
            android:fontFamily="@font/poppins_semi_bold"
            android:textSize="15sp"
            android:layout_marginTop="-6dp"/>

    </LinearLayout>
        <!-- Menu Items -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <!-- My Orders -->
            <LinearLayout
                android:id="@+id/nav_orders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_menu_items"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/list"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="My Orders"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="15sp"
                    android:textColor="#333333" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/arrow_kanan" />
            </LinearLayout>

            <!-- Payment -->
            <LinearLayout
                android:id="@+id/nav_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_menu_items"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/wallet"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Payment"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="15sp"
                    android:textColor="#333333" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/arrow_kanan" />
            </LinearLayout>

            <!-- Addresses -->
            <LinearLayout
                android:id="@+id/nav_addresses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_menu_items"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/location"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Addresses"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="15sp"
                    android:textColor="#333333" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/arrow_kanan" />
            </LinearLayout>

            <!-- Settings -->
            <LinearLayout
                android:id="@+id/nav_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_menu_items"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/setting2"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Settings"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="15sp"
                    android:textColor="#333333" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/arrow_kanan" />
            </LinearLayout>

        </LinearLayout>




    </LinearLayout>
</ScrollView>
