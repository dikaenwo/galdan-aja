<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_bottom_sheet"
    android:clipToPadding="false">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|space_between">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filters"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22 results"
            android:textColor="#888888"/>
    </LinearLayout>

    <!-- Sort by Date -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort by Date"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:textColor="#444444" />

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <!-- Chip 1 -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pre order hari ini"
            app:chipBackgroundColor="@color/chip_background"
            app:chipStrokeWidth="1dp"
            app:chipCornerRadius="16dp"
            android:textColor="#000000"
            app:checkedIconVisible="false"
            app:checkable="true" />


        <!-- Chip 2 -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 Hari"
            app:chipBackgroundColor="@color/chip_background"
            app:chipStrokeWidth="1dp"
            app:chipCornerRadius="16dp"
            android:textColor="#000000"
            app:checkedIconVisible="false"
            app:checkable="true"/>

        <!-- Chip 3 -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chip3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7 Hari"
            app:chipBackgroundColor="@color/chip_background"
            app:chipStrokeWidth="1dp"
            app:chipCornerRadius="16dp"
            android:textColor="#000000"
            app:checkedIconVisible="false"
            app:checkable="true"/>

        <!-- CHIP 4 -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chip4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14 Hari"
            app:layout_constraintTop_toBottomOf="@id/chip1"
            app:layout_constraintStart_toStartOf="@id/chip1"
            app:layout_marginTop="8dp"
            app:chipBackgroundColor="@color/chip_background"
            app:chipStrokeWidth="1dp"
            app:chipCornerRadius="16dp"
            android:textColor="#000000"
            app:checkedIconVisible="false"
            app:checkable="true"/>


        <!-- FLOW: akan menyusun chip-chip di atas -->
        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow_filters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="chip1,chip2,chip3"
            app:flow_wrapMode="chain"
            app:flow_horizontalGap="8dp"
            app:flow_verticalGap="8dp"
            app:flow_horizontalAlign="start"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- Area -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Area"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:textColor="#444444" />

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <!-- Chip 1 -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chip5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kampus 1"
            app:chipBackgroundColor="@color/chip_background"
            app:chipStrokeWidth="1dp"
            app:chipCornerRadius="16dp"
            android:textColor="#000000"
            app:checkedIconVisible="false"
            app:checkable="true" />


        <!-- Chip 2 -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chip6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kampus 2"
            app:chipBackgroundColor="@color/chip_background"
            app:chipStrokeWidth="1dp"
            app:chipCornerRadius="16dp"
            android:textColor="#000000"
            app:checkedIconVisible="false"
            app:checkable="true"/>

        <!-- Chip 3 -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chip7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BTP - Sekitarnya"
            app:chipBackgroundColor="@color/chip_background"
            app:chipStrokeWidth="1dp"
            app:chipCornerRadius="16dp"
            android:textColor="#000000"
            app:checkedIconVisible="false"
            app:checkable="true"/>

        <!-- CHIP 4 -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chip8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kampus Unhas - Sekitarnya"
            app:layout_constraintTop_toBottomOf="@id/chip5"
            app:layout_constraintStart_toStartOf="@id/chip5"
            app:layout_marginTop="8dp"
            app:chipBackgroundColor="@color/chip_background"
            app:chipStrokeWidth="1dp"
            app:chipCornerRadius="16dp"
            android:textColor="#000000"
            app:checkedIconVisible="false"
            app:checkable="true"/>


        <!-- FLOW: akan menyusun chip-chip di atas -->
        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow_filters_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="chip5,chip6,chip7"
            app:flow_wrapMode="chain"
            app:flow_horizontalGap="8dp"
            app:flow_verticalGap="8dp"
            app:flow_horizontalAlign="start"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Footer Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="32dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_remove"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="55dp"
            android:text="Remove all"
            android:textColor="#000000"
            app:cornerRadius="8dp"
            app:strokeWidth="1dp"
            android:backgroundTint="@android:color/white" />


        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Apply Filters"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp"
            android:enabled="false"
            android:background="@drawable/btn_applyfilter" />

    </LinearLayout>
</LinearLayout>
