<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_item_border"
    android:layout_marginBottom="12dp">

    <!-- Produk 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_product"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/pancake"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:textSize="15sp"
                android:text="Pancake Galdan"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/text_sale_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Jual: 26 October"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12sp"
                android:textColor="#444444"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/text_total_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Order:  30/30"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12sp"
                android:textColor="#444444"
                android:layout_marginTop="0dp" />

            <TextView
                android:id="@+id/text_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: Rp.40000"
                android:fontFamily="@font/poppins_regular"
                android:textSize="12sp"
                android:textColor="#444444"
                android:layout_marginTop="0dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Baris tombol + titik tiga -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical">

        <!-- Tombol -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_order_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Daftar Order"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:fontFamily="@font/poppins_bold"
            android:textSize="15sp"
            android:padding="12dp"
            android:background="@drawable/kotak_buatpesanan2" />
        />

        <!-- Titik Tiga -->
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/titiktiga" />
    </LinearLayout>
</LinearLayout>
