<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <!-- Greeting Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Hi Eunwoo"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Kamu mau galdan apa?"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/avatars"
            android:background="@drawable/profile_circle"
            android:clipToOutline="true" />
    </LinearLayout>

    <!-- Search Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_search_active"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_search" />

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search..."
            android:layout_marginStart="8dp"
            android:background="@null"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#AAAAAA"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Trending Search List -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_search_list"
        android:padding="12dp">

        <!-- Item Search -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_trending"
            android:drawablePadding="8dp"
            android:fontFamily="@font/poppins_regular"
            android:paddingVertical="4dp"
            android:text="babi guling"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_trending"
            android:drawablePadding="8dp"
            android:fontFamily="@font/poppins_regular"
            android:paddingVertical="4dp"
            android:text="monkey rica rica"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_trending"
            android:drawablePadding="8dp"
            android:fontFamily="@font/poppins_regular"
            android:paddingVertical="4dp"
            android:text="biawak tumis"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_trending"
            android:drawablePadding="8dp"
            android:fontFamily="@font/poppins_regular"
            android:paddingVertical="4dp"
            android:text="oseng oseng daging buaya"
            android:textColor="#000000" />
    </LinearLayout>
</LinearLayout>
