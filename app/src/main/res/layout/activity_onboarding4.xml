<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Gambar Burger -->
        <ImageView
            android:id="@+id/imageBurger"
            android:layout_width="374dp"
            android:layout_height="374dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/onboarding4"
            android:contentDescription="Burger Stack"
            android:scaleType="fitCenter" />

        <!-- Judul -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join to get the\ndelicious quizines!"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#222222"
            android:layout_marginTop="24dp"
            android:textAlignment="center" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_button_green"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_apple"
                    android:contentDescription="Apple Logo"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continue with Apple"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold" />
            </LinearLayout>
        </FrameLayout>

        <!-- Atau -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:fontFamily="@font/poppins_semi_bold"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginTop="16dp" />

        <!-- Tombol Sosial Media -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:weightSum="3">

            <ImageButton
                android:id="@+id/btnGoogle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/bg_transparent"
                android:src="@drawable/ic_google"
                android:contentDescription="Google" />

            <ImageButton
                android:id="@+id/btnFacebook"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/bg_transparent"
                android:src="@drawable/ic_facebook"
                android:contentDescription="Facebook" />

            <ImageButton
                android:id="@+id/btnEmail"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/bg_transparent"
                android:src="@drawable/ic_email"
                android:contentDescription="Email" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
