<!-- res/drawable/bg_button_apply_filters.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when enabled -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="#54A312"/> <!-- Hijau -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Default (disabled) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D9D9D9"/> <!-- Abu -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
